{
  "name": "pob-js-sdk",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:pob-core": "cd packages/pob-core && pnpm build && cd ../..",
    "build:pob-js-sdk": "cd packages/pob-js-sdk && pnpm build && cd ../..",
    "build:general-workflow": "cd packages/general-workflow && pnpm build && cd ../..",
    "build": "pnpm build:pob-core && pnpm build:pob-js-sdk && pnpm build:general-workflow",
    "release": "pnpm build && changeset publish --json",
    "changeset:publish": "changeset publish",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/m7eio/pob-js-sdk.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/m7eio/pob-js-sdk/issues"
  },
  "homepage": "https://github.com/m7eio/pob-js-sdk#readme",
  "dependencies": {
    "@changesets/cli": "^2.25.0"
  }
}